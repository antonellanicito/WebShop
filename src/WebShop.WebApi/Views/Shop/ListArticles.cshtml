@using WebShop.Model;
@using GridMvc.Html;
@using GridMvc;
@using GridMvc.Columns;
@model List<Article>

    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
<script src="~/Scripts/articles.js" type="text/javascript"> </script>
    
    @Html.Grid(Model).Columns(columns =>
              {
                  columns.Add(foo => foo.Name).SetWidth(110).Sortable(true);
                  columns.Add(foo => foo.Summary).Sortable(true).SetWidth(110);
                  columns.Add(foo => foo.TotalPrice).Sortable(true).Format("{0:0.00}").SetWidth(110).Titled("Price in €");
                  columns.Add(foo => foo.ArticleID, true);
                  columns.Add().RenderValueAs(foo => "Buy").Css("buyIt");
              }).WithPaging(10).SetRowCssClasses(item => "trArticle")       
              